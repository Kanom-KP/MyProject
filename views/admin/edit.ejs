<% layout('../views/layouts/adminboilerplate') %>

    <div class="container addproduct">
        <h4><b>Edit product</b></h4>
        <form action="/admin/product/<%=product._id%>?_method=PUT" method="POST">
            <div class="textinput part">
                <label for="name"><b>Product Name</b></label><br>
                <input type="text" name="product[name]" id="name" placeholder="Name" value="<%=product.name%>" required>
                <br>

                <label for="brand"><b>Brand of product</b></label><br>
                <input type="text" name="product[brand]" id="brand" placeholder="Brand" value="<%=product.brand%>"
                    required> <br>

                <label for="price"><b>Price (Baht)</b></label><br>
                <input type="number" name="product[price]" id="price" placeholder="price" value="<%=product.price%>"
                    required> <br>

                <label for="detail"><b>Product Detail</b></label><br>
                <textarea type="text" name="product[detail]" id="detail" rows="3" placeholder="Detail..."
                    required><%=product.detail%></textarea>
            </div>


            <!-- <label for="img">Select image:</label>
        <input type="file" id="img" name="img" accept="image/*">
        <br> -->

            <div class="part">
                <label for="tag"> <b>Type of Pet : </b> <br></label>
                <select name="product[tag]" id="tag">
                    <option value="Dog" <%=product.tag[0]==='Dog' ? 'selected' : '' %>>Dog</option>
                    <option value="Cat" <%=product.tag[0]==='Cat' ? 'selected' : '' %>>Cat</option>
                    <option value="Rabbit" <%=product.tag[0]==='Rabbit' ? 'selected' : '' %>>Rabbit</option>
                    <option value="Hamster" <%=product.tag[0]==='Hamster' ? 'selected' : '' %>>Hamster</option>
                </select>
                <br>
                <label for="tag"> <b>Type of Product : </b> <br></label>
                <select name="product[tag]" id="tag">
                    <option value="Food" <%=product.tag[1]==='Food' ? 'selected' : '' %>>Food</option>
                    <option value="Vitamins&Supplement" <%=product.tag[1]==='Vitamins&Supplement' ? 'selected' : '' %>
                        >Vitamins&Supplement</option>
                    <option value="Toys" <%=product.tag[1]==='Toys' ? 'selected' : '' %>>Toys</option>
                    <option value="Grooming" <%=product.tag[1]==='Grooming' ? 'selected' : '' %>>Grooming</option>
                    <option value="Bed&Crates" <%=product.tag[1]==='Bed&Crates' ? 'selected' : '' %>>Bed&Crates</option>
                    <option value="Collar&Clothes" <%=product.tag[1]==='Collar&Clothes' ? 'selected' : '' %>
                        >Collar&Clothes</option>
                    <option value="Other" <%=product.tag[1]==='Other' ? 'selected' : '' %>>Other</option>
                </select>
            </div>


            <div class="part">
                <div>
                    <b>Status : </b> <br>
                    <label for="isAvailable">
                        <input type="radio" name="product[isAvailable]" id="isAvailable" value="true"
                            <%=product.isAvailable===true ? 'checked' : '' %>> Active</label>

                    <label for="isAvailable">
                        <input type="radio" name="product[isAvailable]" id="isAvailable" value="false"
                            <%=product.isAvailable===false ? 'checked' : '' %>> Inactive</label>
                </div>

                <div class="textinput">
                    <label for="qty"><b>Quantity</b></label><br>
                    <input type="number" name="product[qty]" id="qty" placeholder="Quantity" value="<%=product.qty%>"
                        required>
                </div>
            </div>

            <br>
            <div class="text-center">
                <button class="btn" type="submit">Update Product</button>
            </div>
        </form>
        <div class="text-center mt-1">
            <button class="btn"><a href="/admin/product/<%= product._id %>">Back to Product Detail</a></button>
        </div>
    </div>


    <!-- STYLE STYLE -->
    <style>
        .addproduct {
            background-color: rgb(255, 250, 245);
            font-size: 0.9rem;
            padding: 15px 20px;
            margin: auto;
            width: fit-content;
        }

        label {
            padding-top: 10px;
            padding-bottom: 0px;
            margin: 0;
        }

        input,
        textarea {
            border: 1px solid rgb(209, 209, 209);
            border-radius: 5px;
            font-size: 0.8rem;
            color: rgb(53, 53, 53);

        }

        .textinput input,
        textarea {
            width: 400px;
            min-height: 30px;
        }

        ::placeholder {
            font-size: 0.8rem;
            color: rgb(153, 153, 153);
        }

        a {
            color: white;
        }

        a:hover {
            color: rgb(90, 90, 90);
            text-decoration: none;
        }

        .btn {
            background-color: #e1b183;
            color: white;
            font-weight: 600;
        }

        .btn:hover {
            color: rgb(90, 90, 90);
            border: 2px solid rgb(90, 90, 90);
        }

        .part {
            border-top: 1px solid #e1b183;
            padding: 20px;
        }

        h4 {
            padding-left: 20px;
        }
    </style>