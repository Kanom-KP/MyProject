<% layout('../views/layouts/adminboilerplate') %>

    <div class="container addproduct">
        <h4><b>Edit User</b></h4>
        <form action="/admin/user/<%=user._id%>?_method=PUT" method="POST">
            <div class="textinput part">
                <p class="name">User Detail</p>
                <p><b>Username : </b>  <%= user.username %></p>
                <p><b>Email : </b>  <%= user.email %></p>

                <b>Role : </b> <br>
                <label for="isAdmin">
                    <input type="radio" name="user[isAdmin]" id="isAdmin" value="true"
                        <%=user.isAdmin===true ? 'checked' : '' %>> Admin</label>

                <label for="isAdmin">
                    <input type="radio" name="user[isAdmin]" id="isAdmin" value="false"
                        <%=user.isAdmin===false ? 'checked' : '' %>> User</label>

            </div>
            <div class="text-center">
                <button class="btn" type="submit">Update User</button>
            </div>
        </form>
        <div class="text-center mt-1">
            <button class="btn"><a href="/admin/user/<%= user._id %>">Back to User Detail</a></button>
        </div>
    </div>


    <!-- STYLE STYLE -->
    <style>
        .addproduct {
            background-color: rgb(255, 250, 245);
            font-size: 0.9rem;
            padding: 15px 20px;
            margin: auto;
            width: fit-content;
        }

        label {
            padding-top: 10px;
            padding-bottom: 0px;
            margin: 0;
        }

        input,
        textarea {
            border: 1px solid rgb(209, 209, 209);
            border-radius: 5px;
            font-size: 0.8rem;
            color: rgb(53, 53, 53);

        }

        .textinput input,
        textarea {
            width: 400px;
            min-height: 30px;
        }

        ::placeholder {
            font-size: 0.8rem;
            color: rgb(153, 153, 153);
        }

        a {
            color: white;
        }

        a:hover {
            color: rgb(90, 90, 90);
            text-decoration: none;
        }

        .btn {
            background-color: #e1b183;
            color: white;
            font-weight: 600;
        }

        .btn:hover {
            color: rgb(90, 90, 90);
            border: 2px solid rgb(90, 90, 90);
        }

        .part {
            border-top: 1px solid #e1b183;
            padding: 20px;
        }

        h4 {
            padding-left: 20px;
        }
    </style>