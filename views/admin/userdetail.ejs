<% layout('../views/layouts/adminboilerplate') %> 

    <div class="container detail">
    <p class="name">User Detail</p>
    <p><b>Username : </b>  <%= user.username %></p>
    <p><b>Email : </b>  <%= user.email %></p>
    <p><b>Status : </b>  <%= user.isAdmin === true ? 'Admin': 'User'%>  </p>
    
    </div>


<div class="button text-center">
    <div class="row editndel text-center">
        <button class="btn edit-btn"><a href="/admin/user/<%=user._id%>/edit">Edit</a></button>
    
        <form id="delete-form" action="/admin/user/<%=user._id%>?_method=DELETE" method="POST">
        <button class="btn del-btn" onclick="return confirmation('Are you sure?');">Delete</button> </form>

    </div>
    <button class="btn back-btn"><a href="/admin/user/all"><< Back to all user</a></button>
</div>
    <!-- STYLE STYLE -->

<script>
function confirmation(){
    if(confirm('Are you sure?')) {
        document.getElementById('delete-form').submit();
    } else {
        return false;
    }
    }
</script>

